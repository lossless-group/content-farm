{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/mcp",
    "rootDir": "./src/mcp",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@modelcontextprotocol/*": ["./node_modules/@modelcontextprotocol/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/mcp/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
